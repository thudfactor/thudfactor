---
import Base from "@layouts/Base.astro";
import Content from "@components/Content.astro";

interface Props {
	title: string;
	description: string;
	date: Date;
	updatedDate?: Date;
	cover?: any;
}

const { title, description } = Astro.props;
---

<Base title={title} description={description}>
	<Content {...Astro.props}>
		<slot />
	</Content>
</Base>
