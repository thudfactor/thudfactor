---
layout: main
---

<article>
  {% if cover %}
    {% coverImage cover %}
  {% endif %}
  <h1>
    {{ title }}
    {% if subtitle %}
      <span>{{ subtitle }}</span>
    {% endif %}
  </h1>
  <div class="post-meta">
    {{ date | nicedate }}
    {% if categories %}•{% endif %}
    {% for cat in categories %}
      <a href="/categories/{{ cat | slugify }}">{{ cat }}</a>
      {% unless forloop.last %}
        •
      {% endunless %}
    {% endfor %}
  </div>
  {{ content }}
</article>