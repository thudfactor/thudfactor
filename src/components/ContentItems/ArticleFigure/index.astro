---
import ArticleImage from "@components/ContentItems/ArticleImage/index.astro";
import Attribution from "../Attribution.astro";

const { image, alt, variant, position, attribution } = Astro.props;
---

<figure data-position={position} data-variant={variant} class="flow">
	<slot name="fig">
		<ArticleImage image={image} alt={alt} />
		{attribution && <Attribution attribution={attribution} />}
	</slot>
	<figcaption><slot /></figcaption>
</figure>
