---
import Base from "@layouts/Base.astro";
import Content from "@components/Content.astro";
import EndMark from "@components/PageItems/EndMark.astro";

interface Props {
	title: string;
	description: string;
	date: Date;
	updatedDate?: Date;
	cover?: any;
}

const { title, description, cover } = Astro.props;
---

<Base title={title} description={description} cover={cover}>
	<Content {...Astro.props}>
		<slot />
		<EndMark />
	</Content>
</Base>
