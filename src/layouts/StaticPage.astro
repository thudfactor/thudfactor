---
import Base from "@layouts/Base.astro";
import Content from "@components/Content.astro";

const pageProps = Astro.props.frontmatter || Astro.props;

const { title, description, cover } = pageProps;
---

<Base title={title} description={description} cover={cover}>
	<Content {...pageProps}>
		<slot />
	</Content>
</Base>
