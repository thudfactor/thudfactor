---
import Base from '@layouts/Base.astro';
import Content from '@components/Content.astro';
import Finial from '@components/Finial.astro';

interface Props {
	title: string;
	description: string;
	date: Date;
	updatedDate?: Date;
};

const { title, description } = Astro.props;
---
<Base title={title} description={description}>
	<Content {...Astro.props}>
		<slot />
		<Finial />
	</Content>
</Base>
