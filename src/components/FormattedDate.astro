---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---
<style>
	@layer components {
		span {
			font-style: normal !important;
		}
	}
</style>
<time datetime={date.toISOString()}>
	<span role="presentation">â˜‰</span>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'long',
			day: 'numeric',
		})
	}
</time>
