---
import Page from "@components/PageItems/Page.astro";
import Header from "@components/PageItems/Header.astro";
import Footer from "@components/PageItems/Footer.astro";
import SkipNav from "@components/PageItems/SkipNav.astro";
import MainSidebar from "@components/PageItems/MainSidebar.astro";

const { title, description } = Astro.props;
---

<style>
	#base-grid {
		font-size: var(--font-size-1);
	}
</style>
<Page title={title} description={description}>
	<SkipNav />
	<div id="base-grid">
		<Header />
		<MainSidebar>
			<slot name="sidebar" />
		</MainSidebar>
		<main id="skip-target">
			<slot />
		</main>
		<Footer />
	</div>
</Page>
