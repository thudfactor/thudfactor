<div class="excerpt">
  <div class="excerpt-body">
    {% if post.data.cover %}
      <figure>
        {%- capture imagepath -%}
          {{ post.page.url }}{{ post.data.cover.src }}
        {%- endcapture -%}
        {% image imagepath post.data.cover.alt %}
      </figure>
    {% endif %}
    <div class="teaser">
      <div class="excerpt-header">
        <h2>
          <a href="{{post.url}}">{{ post.data.title }}</a>
        </h2>
      </div>
      {% excerpt post %}
    </div>
  </div>
</div>