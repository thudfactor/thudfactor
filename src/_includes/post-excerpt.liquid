<div class="excerpt">
  <div class="teaser">
    <a href="{{post.url}}">{{ post.data.title }}</a>
    - {{ post.date | nicedate }}<br/>
    {% excerpt post %}
  </div>
  {% if post.data.cover %}
    <figure>
      {%- capture imagepath -%}
        {{ post.page.url }}{{ post.data.cover.src }}
      {%- endcapture -%}
      {% image imagepath post.data.cover.alt %}
    </figure>
  {% endif %}
</div>