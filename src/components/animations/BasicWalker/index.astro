<div id="Target"></div>
<script>
	import p5 from "p5";
	import Walker from "./Walker.class.ts";

	const sketch = (p: p5) => {
		let walker: Walker;

		p.setup = () => {
			p.createCanvas(400, 400);
			p.background(255);
			walker = new Walker(p);
		};

		p.draw = () => {
			p.background(100);
			walker.step();
			walker.show();
		};
	};

	const target = document.getElementById("Target");

	if (target) {
		new p5(sketch, target);
	}
</script>
